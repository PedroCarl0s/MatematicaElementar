<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimarytoobar</item>
        <item name="colorAccent">@color/corTabBar</item>
    </style>

    <!--Cor para a mensagem de erro no TextInputLayout  -->
    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorTextInput</item>
    </style>


    <style name="mySpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/backgroundbord</item>
        //ao clicar em um os itens
        <!--<item name="android:dropDownSelector">@color/colorFlash</item>-->
        //fundo do dropdown
        <item name="android:popupBackground">@color/corBackGround</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

</resources>
